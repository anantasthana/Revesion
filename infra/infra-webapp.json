{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "app-server-name": {
            "type": "string",
            "metadata": {
                "description": "The name for the app server"
            }
        },
        "app-service-name": {
            "type": "string",
            "metadata": {
                "description": "The name of the app service instance"
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "name": "[parameters('app-server-name')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "F1",
                "capacity": 1
            },
            "tags": {
                "displayName": "[parameters('app-server-name')]"
            },
            "properties": {
                "name": "[parameters('app-server-name')]"
            }
        },
        {
            "name": "[parameters('app-service-name')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2016-08-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('app-server-name'))]": "Resource",
                "displayName": "mywebApp"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('app-server-name'))]"
            ],
            "properties": {
                "name": "mywebApp",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('app-server-name'))]"
            }
        }
    ],
    "outputs": {
    },
    "functions": [
    ]
}, {
    "name": "mywebApp",
    "type": "Microsoft.Web/sites",
    "apiVersion": "2016-08-01",
    "location": "[resourceGroup().location]",
    "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/appServicePlan1')]": "Resource",
        "displayName": "mywebApp"
    },
    "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', 'appServicePlan1')]"
    ],
    "properties": {
        "name": "mywebApp",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', 'appServicePlan1')]"
    }
}
